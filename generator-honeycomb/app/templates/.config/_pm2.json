{
  "apps": [{
    "name": "<%= name %>",
    <%_ if (env === 'production') { _%>
    "script": "dist/server/server.js",
    "instances": 2,
    "exec_mode": "cluster",
    "env": {
      "NODE_ENV": "production"
    },
    <%_ } _%>
    <%_ if (env === 'development') { _%>
    "script": "src/server/server.js",
    "watch": ["src/server"],
    "exec_interpreter": "babel-node",
    "env": {
      "NODE_ENV": "development"
    },
    <%_ } _%>
    "combine_logs": true,
    "error_file": "logs/<%= name %>.error.log",
    "out_file": "logs/<%= name %>.out.log",
    "pid_file": "pids/<%= name %>.pid"
  }]
}
