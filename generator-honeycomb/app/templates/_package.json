{
  "name": "<%= packageName %>",
  "version": "<%= packageVersion %>",
  "description": "<%= packageDescription %>",
  "main": "src/server/server.js",
  "scripts": {
    <%_ if (includeReact) { _%>
    "build": "npm run build:babel && npm run build:webpack",
    <%_ } _%>
    <%_ if (includeHandlebars) { _%>
    "build": "npm run build:babel && npm run build:views && npm run build:webpack",
    "build:views": "ncp src/server/views dist/server/views",
    <%_ } _%>
    "build:babel": "cross-env BABEL_ENV=production babel src/ --out-dir dist/ --source-maps --only src/server/",
    "build:webpack": "cross-env NODE_ENV=production webpack --config .config/webpack.config.js",
    "clean": "rimraf pids logs coverage .nyc_output dist public/javascripts/*.bundle.js*",
    "lint": "eslint --format=node_modules/eslint-formatter-pretty .",
    "start": "npm run start:development",
    "start:development": "pm2-dev start .config/pm2.development.json",
    "start:production": "pm2 start .config/pm2.production.json",
    "test": "npm run lint && npm run test:integration && npm run test:unit",
    "test:integration": "chimp .config/chimp.js",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch"
  },
  "author": "<%= packageAuthor %>",
  "license": "MIT",
  "dependencies": {
    "babel-runtime": "^6.11.6",
    "glue": "^4.0.0",
    "good": "^7.0.2",
    "good-console": "^6.1.2",
    "hapi": "^15.1.1",
    <%_ if (includeReact) { _%>
    "hapi-react-views": "^9.2.0",
    <%_ } _%>
    "hapi-router": "^3.5.0",
    "hapijs-status-monitor": "^0.4.0",
    <%_ if (includeHandlebars) { _%>
    "handlebars": "^4.0.5",
    <%_ } _%>
    "hoek": "^4.1.0",
    "honeycomb-registry-client": "^1.0.0",
    "inert": "^4.0.2",
    "pm2": "^1.1.3",
    <%_ if (includeReact) { _%>
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-hot-loader": "^3.0.0-beta.5",
    <%_ } _%>
    "vision": "^4.1.0",
    "visionary": "^6.0.2"
  },
  "devDependencies": {
    "@danielbayerlein/hapi-webpack-middleware": "^1.0.1",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-jest": "^16.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-class-properties": "^6.16.0",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    <%_ if (includeReact) { _%>
    "babel-preset-react": "^6.16.0",
    <%_ } _%>
    "chimp": "^0.41.1",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.7.0",
    <%_ if (includeReact) { _%>
    "eslint-config-airbnb": "^12.0.0",
    <%_ } _%>
    <%_ if (includeHandlebars) { _%>
    "eslint-config-airbnb-base": "^8.0.0",
    <%_ } _%>
    "eslint-formatter-pretty": "^1.0.0",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-import": "^1.16.0",
    <%_ if (includeReact) { _%>
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.3.0",
    <%_ } _%>
    "jest-cli": "^16.0.0",
    <%_ if (includeHandlebars) { _%>
    "ncp": "^2.0.0",
    <%_ } _%>
    <%_ if (includeReact) { _%>
    "react-test-renderer": "^15.3.2",
    <%_ } _%>
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-middleware": "^1.8.3",
    "webpack-hot-middleware": "^2.12.2"
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache",
    "moduleFileExtensions": [
      "js"
    ],
    "testRegex": ".*\\.test\\.js",
    "collectCoverage": "true",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/src/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "\\.snap$"
    ]
  }
}
