{
  "name": "<%= packageName %>",
  "version": "<%= packageVersion %>",
  "description": "<%= packageDescription %>",
  "main": "src/server/server.js",
  "private": true,
  "scripts": {
    <%_ if (includeReact) { _%>
    "build": "npm run build:babel && npm run build:webpack",
    <%_ } _%>
    <%_ if (includeHandlebars) { _%>
    "build": "npm run build:babel && npm run build:views && npm run build:webpack",
    "build:views": "ncp src/server/views dist/server/views",
    <%_ } _%>
    "build:babel": "cross-env BABEL_ENV=production babel src/ --out-dir dist/ --source-maps --only src/server/",
    "build:webpack": "cross-env NODE_ENV=production webpack --config .config/webpack.config.js",
    "clean": "rimraf pids logs coverage dist output <%= includeReact ? 'public/javascripts/*.bundle.js' : 'public/**/*.bundle.*' %>",
    "lint": "npm run lint:js && npm run lint:styles",
    "lint:js": "eslint --format=node_modules/eslint-formatter-pretty .",
    <%_ if (includeHandlebars) { _%>
    "lint:styles": "stylelint src/client/**/*.css",
    <%_ } _%>
    <%_ if (includeReact) { _%>
    "lint:styles": "stylelint src/server/views/**/*.js src/client/components/**/*.js",
    <%_ } _%>
    "start": "npm run start:production",
    "start:development": "cross-env NODE_ENV=development nodemon src/server/server.js --exec babel-node --watch src/server --ext <%= includeHandlebars ? 'js,html' : 'js' %>",
    "start:production": "cross-env NODE_ENV=production node dist/server/server.js",
    "test": "npm run lint && npm run test:unit",
    "test:bench": "node test/bench/cases.js",
    "test:acceptance": "codeceptjs run --steps --config .config/codecept.json",
    "test:unit": "jest --coverage",
    "test:unit:watch": "jest --watch --coverage"
  },
  "author": "<%= packageAuthor %>",
  "license": "MIT",
  "dependencies": {
    "babel-runtime": "^6.22.0",
    "cross-env": "^3.1.4",
    <%_ if (includeReact) { _%>
    "hapi-react-views": "^9.2.1",
    <%_ } _%>
    "hapi-router": "^3.5.0",
    "hapijs-status-monitor": "^0.5.0",
    <%_ if (includeHandlebars) { _%>
    "handlebars": "^4.0.6",
    <%_ } _%>
    "hoek": "^4.1.0",
    "honeycomb-health-middleware": "^1.0.0",
    "honeycomb-info-middleware": "^1.0.0",
    "honeycomb-logging-middleware": "^1.0.0",
    "honeycomb-registry-client": "^1.0.0",
    "honeycomb-server": "^1.0.0",
    "inert": "^4.1.0",
    <%_ if (includeReact) { _%>
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "styled-components": "^1.4.0",
    <%_ } _%>
    "vision": "^4.1.1",
    "visionary": "^6.0.2"
  },
  "devDependencies": {
    "@danielbayerlein/hapi-webpack-middleware": "^1.0.1",
    <%_ if (includeHandlebars) { _%>
    "autoprefixer": "^6.7.0",
    <%_ } _%>
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-class-properties": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    <%_ if (includeReact) { _%>
    "babel-preset-react": "^6.22.0",
    <%_ } _%>
    "benchmark": "^2.1.3",
    "codeceptjs": "^0.4.16",
    <%_ if (includeHandlebars) { _%>
    "css-loader": "^0.26.1",
    <%_ } _%>
    "eslint": "^3.14.0",
    "eslint-config-honeycomb": "^1.0.0",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    <%_ if (includeReact) { _%>
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    <%_ } _%>
    <%_ if (includeHandlebars) { _%>
    "extract-text-webpack-plugin": "^2.0.0-beta.5",
    <%_ } _%>
    "jest-cli": "^18.1.0",
    <%_ if (includeHandlebars) { _%>
    "ncp": "^2.0.0",
    <%_ } _%>
    "nightmare": "^2.9.1",
    "nightmare-upload": "^0.1.1",
    "nodemon": "^1.11.0",
    <%_ if (includeHandlebars) { _%>
    "postcss-loader": "^1.2.2",
    <%_ } _%>
    <%_ if (includeReact) { _%>
    "react-test-renderer": "^15.4.2",
    <%_ } _%>
    "rimraf": "^2.5.4",
    <%_ if (includeHandlebars) { _%>
    "style-loader": "^0.13.1",
    <%_ } _%>
    "stylelint": "^7.7.1",
    "stylelint-config-standard": "^15.0.1",
    <%_ if (includeReact) { _%>
    "stylelint-processor-styled-components": "0.0.4",
    <%_ } _%>
    <%_ if (includeHandlebars) { _%>
    "stylelint-webpack-plugin": "^0.5.1",
    <%_ } _%>
    "style-loader": "^0.13.1",
    "webpack": "^2.2.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0"
  },
  "jest": {
    "collectCoverageFrom": ["**/src/**/*.js"],
    "testRegex": "/test/unit/.*\\.js$"
  }
}
