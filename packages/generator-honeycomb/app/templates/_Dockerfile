FROM node:latest

# Install PM2
RUN npm install pm2 -g

# Create app directory
RUN mkdir -p /code/<%= dir %>
WORKDIR /code/<%= dir %>

# Install app dependencies
COPY package.json /code/<%= dir %>/
RUN npm install

# Bundle app source
COPY . /code/<%= dir %>

# Build
RUN npm run build

# Port
EXPOSE <%= port %>

# Start
CMD [ "pm2-docker", ".config/pm2.production.json" ]
