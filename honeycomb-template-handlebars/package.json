{
  "name": "honeycomb-template",
  "version": "1.0.0",
  "description": "",
  "main": "src/server/server.js",
  "scripts": {
    "build": "npm run build:babel && npm run build:webpack",
    "build:babel": "cross-env BABEL_ENV=production babel src/ --out-dir dist/ --source-maps --only src/server/",
    "build:webpack": "cross-env NODE_ENV=production webpack --config .config/webpack.config.js",
    "clean": "rimraf pids logs coverage .nyc_output dist public/javascripts/*.bundle.js*",
    "lint": "eslint --format=node_modules/eslint-formatter-pretty .",
    "start": "npm run start:development",
    "start:development": "pm2-dev start .config/pm2.development.json",
    "start:production": "pm2 start .config/pm2.production.json",
    "test": "npm run lint && npm run test:integration && npm run test:unit",
    "test:integration": "chimp .config/chimp.js",
    "test:unit": "nyc --all --require=babel-core/register --include=src/ ava",
    "test:unit:report": "nyc report --reporter=lcov",
    "test:unit:watch": "ava -- --watch"
  },
  "author": "Daniel Bayerlein",
  "license": "MIT",
  "dependencies": {
    "babel-runtime": "^6.11.6",
    "glue": "^3.3.0",
    "good": "^7.0.1",
    "good-console": "^6.1.2",
    "handlebars": "^4.0.5",
    "hapi": "^14.2.0",
    "hapi-router": "^3.5.0",
    "hoek": "^4.0.2",
    "honeycomb-registry-client": "^1.0.0",
    "inert": "^4.0.1",
    "pm2": "^1.1.3",
    "vision": "^4.1.0",
    "visionary": "^6.0.1"
  },
  "devDependencies": {
    "@danielbayerlein/hapi-webpack-middleware": "^1.0.1",
    "ava": "^0.16.0",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015": "^6.13.2",
    "chimp": "^0.40.4",
    "cross-env": "^2.0.0",
    "css-loader": "^0.23.1",
    "eslint": "^3.3.0",
    "eslint-config-airbnb-base": "^5.0.2",
    "eslint-formatter-pretty": "^0.3.1",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-import": "^1.13.0",
    "jsdom": "^9.4.2",
    "nyc": "^8.1.0",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "webpack": "^2.1.0-beta.20",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.12.2"
  },
  "ava": {
    "files": [
      "./test/unit/**/*.test.js"
    ],
    "require": [
      "babel-core/register",
      "./.config/browsersetup"
    ],
    "verbose": "true",
    "babel": "inherit"
  }
}
